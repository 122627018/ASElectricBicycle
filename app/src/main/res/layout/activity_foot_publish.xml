<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_foot_publish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wxxiaomi.ming.electricbicycle.ui.activity.FootPublishActivity">
    <android.support.v7.widget.Toolbar
        android:layout_alignParentTop="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/titleBlue" />
    <EditText
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/et"
        android:layout_below="@+id/toolbar1"
        android:hint="写写你此刻的心情"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_locat"
        android:textColor="@color/titleBlue"
        android:layout_margin="10dp"
        android:layout_below="@+id/et"
        android:text="揭阳 科技馆"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_below="@+id/tv_locat"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_up"
            android:layout_centerInParent="true"
            android:text="上传图片"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_action"
            app:backgroundTint="#4876FF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="15dp"
            android:src="@mipmap/ic_camera_alt_white_48dp"
            app:borderWidth="0dp" />

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
