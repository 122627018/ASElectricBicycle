<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/rl_demo1"
    android:layout_alignParentTop="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#173C6F"
    android:orientation="vertical"
   >
    <com.wxxiaomi.ming.electricbicycle.core.weight.custom.CircularImageView
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:id="@+id/iv_my_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
         />

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:id="@+id/ll_round_content"
        android:padding="5dp"
        android:layout_below="@+id/iv_my_head"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="Mr.W"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:padding="5dp"
            android:textColor="#80ffffff"
            android:textSize="12sp"
            android:text="广东揭阳"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:padding="5dp"
            android:textColor="#80ffffff"
            android:textSize="12sp"
            android:text="唯有努力，才能看起来毫不费力"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/rl_demo1"
        android:id="@+id/demo2"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="80dp">

    </LinearLayout>

</RelativeLayout>